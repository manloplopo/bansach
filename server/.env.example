# Environment configuration for EduBook
# Copy this file to .env and fill real values

# Server
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Security
JWT_SECRET=change_this_secret_key
JWT_EXPIRES_IN=7d
COOKIE_SECURE=false

# Database (SQLite by default)
DB_STORAGE=./data/edubook.sqlite
DB_LOGGING=false

# Stripe (test keys from dashboard)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxx

# Email (Ethereal for dev or other SMTP)
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_ethereal_user
EMAIL_PASS=your_ethereal_pass
EMAIL_FROM="EduBook <no-reply@edubook.local>"

# Password reset & email verify expiration (in minutes)
EMAIL_TOKEN_EXPIRES=30
RESET_TOKEN_EXPIRES=30

# CORS
CORS_ORIGIN=http://localhost:3000

# HTTPS (self-signed cert paths optional)
SSL_KEY=./certs/key.pem
SSL_CERT=./certs/cert.pem
USE_HTTPS=false
